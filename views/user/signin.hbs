<div class="row">
    <div class="col-xs-12">
        <div style="padding : 30px"></div>
        <h2>SIGN IN</h2>
        {{# if hasErrors}}
            <div class="alert alert-danger">
              {{# each messages}}
              <p>{{this}}</p>
              {{/each}}
            </div>
        {{/if}}
    </div>
</div>
<div class="row">
    <div class="col-lg-4 col-xs-12 col-lg-offset-4">
        <div class="login-block">
            <form action="/user/signin" class="box-shadow:none">
                <div class="form-group">
                    <input type="email" name="email" placeholder="Email ID" class="form-control no-glow">
                </div>
                <div class="form-group input-group">
                <input type="password" class="form-control no-glow" placeholder="Password">
                <div class="input-group-btn">
                <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                <div class="btn btn-default password-btn" type="submit">
                <i class="glyphicon glyphicon-eye-open" style="color:#848381;cursor: pointer; pointer-events: all"></i>
            </div>
        </div>
    </div>
<div class="form-group">
    <input type="submit" value="LOGIN" class="btn btn-success form-control submit-btn">
</div>
</form>
</div>
</div>
</div>
<div class="row">
    <div class="col-lg-4 col-xs-12 col-lg-offset-4 new">
        <!-- <p>New to MyWishCompany?</p> -->
        <div class="col-xs-10 col-xs-offset-1">
            <button class="btn form-control register-btn"><a href="/user/signup">REGISTER</a></button>
        </div>
    </div>
</div>
